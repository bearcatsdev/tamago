<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="Activity.Gacha">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gacha Shop"
        android:textSize="28sp"
        android:layout_gravity="center"
        android:fontFamily="@font/quicksand_b"/>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="gacha_roll.json"
        app:lottie_loop="true" />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_margin = "20dp"
        android:layout_gravity="center">

        <android.support.v7.widget.CardView
            android:layout_width="174dp"
            android:layout_height="47dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#7FB800"
            app:cardCornerRadius="14dp"></android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/btn_gacha"
            android:layout_width="174dp"
            android:layout_height="47dp"
            android:backgroundTint="#96C42E"
            app:cardCornerRadius="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/quicksand_b"
                android:text="DONE"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </android.support.v7.widget.CardView>
    </FrameLayout>

</LinearLayout>